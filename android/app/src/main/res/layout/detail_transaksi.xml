<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Detail"
            android:textSize="24dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/txDetail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_barang"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_anggota"
            android:visibility="gone"/>
    <TableLayout
        android:id="@+id/tabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txDetail">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/no_transaksi"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="ID Transaksi"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/id_transaksi"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/txtNama_Barang"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Nama Barang"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/nama_barang"

                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/PembeliAtauPenjual"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Pembeli"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/namaPembeliAtauPenjual"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:visibility="gone"
            android:id="@+id/trPenjual">
            <TextView
                android:id="@+id/penjual"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Penjual"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/nama_penjual"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/txJumlah"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Jumlah Barang"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/jumlah_barang"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/txTotal"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Total"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/total"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/txWaktu"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Tanggal"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/waktu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:background="@drawable/isi_kolom"
                android:padding="10dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/txalamat"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Dikirim ke"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:background="@drawable/isi_kolom"
                android:padding="10dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">
            <TextView
                android:id="@+id/txStatus"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:layout_weight="0.6"
                android:text="Status"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:id="@+id/linSpin">
                <Spinner
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:background="@android:drawable/btn_dropdown"
                    android:id="@+id/spinner" />
            </LinearLayout>
            <TextView
                android:id="@+id/status"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/isi_kolom"
                android:layout_weight="1.4"
                android:visibility="gone"
                android:text="Batal"/>


        </TableRow>



    </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabel"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:weightSum="2">
            <Button

                android:id="@+id/butUbah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ubah"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/butBatal"
                android:layout_weight="1"
                android:text="Batal"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>